{{#each result}}
<div class="imgBtn text-center">
    <button type="button" class="btn text-center"data-toggle="modal" data-target="#train">
        <img src={{IMAGE}} class="img-responsive img-thumbnail" alt="TrainSchedule">
        <div class="text">{{NAME}}</div>
    </button>
</div>
{{!-- Modal --}}
{{!-- <div class="modal" id="train" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"> --}}
<div class="modal" tabindex="-1" role="dialog" id="train">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{NAME}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            {{DESC}}
            <hr>
            <a href={{LINK}}>{{NAME}}</a>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
</div>
{{/each}}